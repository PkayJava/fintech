    <entry key="app.jdbc.jndi">jdbc/fintech</entry>

    <entry key="app.jdbc.driver">com.mysql.jdbc.Driver</entry>
    <entry key="app.jdbc.username">root</entry>
    <entry key="app.jdbc.password">password</entry>
    <entry key="app.jdbc.url"><![CDATA[jdbc:mysql://localhost:3306/mifosplatform_tenants?createDatabaseIfNotExist=true&autoReconnect=true&useSSL=false&serverTimezone=UTC]]></entry>
    
    <entry key="mifos.url"><![CDATA[http://localhost:8080/fineract-provider]]></entry>

    <!-- Role -->
    <entry key="role.administrator">administrator</entry>
