    <!-- administrator -->
    <entry key="user.admin">admin</entry>
    <entry key="user.admin.role">role.administrator</entry>
    <entry key="user.admin.password">admin</entry>
    <!-- system -->
    <entry key="user.system">system</entry>
    <entry key="user.system.role">role.system</entry>
    <entry key="user.system.password">system</entry>
    <!-- administrator -->
    <entry key="user.service">service</entry>
    <entry key="user.service.role">role.service</entry>
    <entry key="user.service.password">service</entry>

    <entry key="pattern.datetime">yyyy-MM-dd'T'HH:mm:ssZZ</entry>
    <entry key="pattern.date">yyyy-MM-dd</entry>
    <entry key="pattern.time">HH:mm:ss</entry>
    <entry key="pattern.folder">/yyyy/MM/dd/HH/mm/ss</entry>

    <entry key="executor.pool_size">10</entry>
    <entry key="executor.queue_capacity">500</entry>

    <entry key="resource.repo">/opt/sandbox/fintech</entry>

    <entry key="encryption.password"><![CDATA[7808654h4zzx05DheFMZ]]></entry>
